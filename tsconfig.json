{
  "compilerOptions": {
    "declarationDir": "dist",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": [
      "es2019",
      "dom"
    ],
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "src/**/*.ts", "src/**/*.vue",
  ],
}
